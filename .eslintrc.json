{
    "parser": "@typescript-eslint/parser",
    "plugins": ["react", "@typescript-eslint", "prettier", "perfectionist"],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react/recommended",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": "error",
        // perfectionist 와 충돌되는 규칙
        "import/order": "off",
        "sort-imports": "off"
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "ignorePatterns": [
        "build",
        "dist",
        "node_modules",
        "package.json",
        "tsconfig.json",
        "tsconfig.node.json",
        ".eslintrc.*"
    ],
    "overrides": [
        {
            "files": ["**/*.ts?(x)", "**/*.js?(x)"],
            "extends": ["plugin:perfectionist/recommended-natural"],
            "parserOptions": {
                "ecmaFeatures": {
                    "jsx": true
                }
            },
            "rules": {
                // react import 생략 가능하도록
                "react/react-in-jsx-scope": "off",
                "perfectionist/sort-objects": [
                    "error",
                    {
                        "type": "natural",
                        "order": "asc"
                    }
                ]
            }
        },
        {
            "files": ["**/*.css", "**/*.html", "**/*.json"],
            "extends": ["plugin:perfectionist/recommended-line-length"],
            "rules": {
                "perfectionist/sort-objects": [
                    "error",
                    {
                        "type": "line-length",
                        "order": "asc"
                    }
                ]
            }
        }
    ]
}
