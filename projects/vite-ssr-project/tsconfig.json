{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "react": ["./node_modules/react"],
            "react-dom": ["./node_modules/react-dom"],
            "#components/*": ["./components/*"],
            "#renderer/*": ["./renderer/*"],
            "#hooks/*": ["./hooks/*"],
            "#atoms/*": ["./atoms/*"],
            "@common/components": ["../../packages/common-components/lib/index.ts"],
            "@common/utils": ["../../packages/common-utils/lib/index.ts"]
        },
        "strict": true,
        "module": "es2022",
        "target": "ES2020",
        "moduleResolution": "Node",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "types": ["vite/client"],
        "jsx": "react-jsx",
        "skipLibCheck": true,
        "esModuleInterop": true
    },
    "ts-node": {
        "transpileOnly": true,
        "esm": true,
        "compilerOptions": {
            "moduleResolution": "Node"
        },
        "experimentalSpecifierResolution": "node"
    }
}
