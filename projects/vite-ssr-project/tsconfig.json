{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "react": ["./node_modules/react"],
            "react-dom": ["./node_modules/react-dom"],
            "~components/*": ["./components/*"],
            "~hooks/*": ["./hooks/*"]
        },
        "strict": true,
        "module": "es2022",
        "target": "ES2020",
        "moduleResolution": "Node",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "types": ["vite/client"],
        "jsx": "react-jsx",
        "skipLibCheck": true,
        "esModuleInterop": true
    },
    "ts-node": {
        "transpileOnly": true,
        "esm": true,
        "compilerOptions": {
            "moduleResolution": "Node16"
        }
    }
}
