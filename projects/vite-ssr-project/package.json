{
    "name": "vite-ssr-project",
    "scripts": {
        "dev": "yarn server",
        "prod": "yarn lint && yarn build && yarn server:prod",
        "build": "vite build",
        "server": "ts-node --project ./tsconfig.json ./server/index.ts",
        "server:prod": "cross-env NODE_ENV=production ts-node --project ./tsconfig.json ./server/index.ts",
        "prod:lambda": "vite build && serverless offline",
        "deploy": "serverless deploy --verbose",
        "lint": "eslint . --fix --max-warnings 0"
    },
    "dependencies": {
        "@common/components": "workspace:^",
        "@types/express": "^4.17.14",
        "@types/node": "^18.11.9",
        "@types/react": "^18.0.8",
        "@types/react-dom": "^18.0.3",
        "@typescript-eslint/eslint-plugin": "^5.59.0",
        "@typescript-eslint/parser": "^5.59.0",
        "@vitejs/plugin-react": "^3.0.0",
        "cross-env": "^7.0.3",
        "eslint": "^8.38.0",
        "eslint-plugin-react": "^7.32.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.3.4",
        "express": "^4.18.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "serverless-http": "^3.2.0",
        "sirv": "^2.0.2",
        "typescript": "^4.9.4",
        "ua-parser-js": "^1.0.35",
        "vite": "^4.0.3",
        "vite-plugin-ssr": "^0.4.132"
    },
    "type": "module",
    "devDependencies": {
        "@types/serverless": "^3",
        "@types/ua-parser-js": "^0.7.36",
        "esbuild": "^0.18.10",
        "esbuild-plugin-copy": "^2.1.1",
        "eslint-plugin-html": "^7.1.0",
        "eslint-plugin-perfectionist": "^1.4.0",
        "eslint-plugin-prettier": "^4.2.1",
        "serverless": "^3.33.0",
        "serverless-esbuild": "^1.45.1",
        "serverless-offline": "^12.0.4",
        "ts-node": "^10.9.1"
    }
}
